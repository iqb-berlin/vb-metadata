<local:MDBasisControl x:Class="BooleanShowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:local="clr-namespace:iqb.mdc.components">
    <local:MDBasisControl.Resources>
        <local:MDValueToBooleanPathConverter x:Key="MDValueToBooleanPathConverter" />
    </local:MDBasisControl.Resources>
    <Path Width="11" Height="11" SnapsToDevicePixels="False" Stroke="Black" StrokeThickness="2"
          Data="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type local:MDBasisControl}}, Path=MD, Converter={StaticResource MDValueToBooleanPathConverter}}" 
          HorizontalAlignment="Left"/>
</local:MDBasisControl>