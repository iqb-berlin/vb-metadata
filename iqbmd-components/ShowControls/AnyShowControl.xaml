<local:MDBasisControl x:Class="AnyShowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:local="clr-namespace:iqb.md.components">
    <TextBlock TextWrapping="Wrap" Margin="0 2 0 0" >
        <TextBlock.Resources>
            <local:MDValueToStringConverter x:Key="MDValueToStringConverter"/>
        </TextBlock.Resources>
        <TextBlock.Text>
            <Binding Converter="{StaticResource MDValueToStringConverter}"/>
        </TextBlock.Text>
    </TextBlock>
</local:MDBasisControl>